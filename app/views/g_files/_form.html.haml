      %div{id: "gFileDelete_#{index}", data: {target: "gist-form.g_file_delete"}}
        %button.btn.btn-outline-danger{type: "button", id: "gFileDeleteButton_#{index}", data: { action: "click->gist-form#deleteGFileField"}}
          %span{class: "glyphicon glyphicon-trash"}
  .row
    .col-sm-12
      .form-group
        = ff.label :contents, class: 'sr-only'
        = ff.text_area :contents, class: 'form-control', placeholder: 'File contents...', rows: 10