  .row
    .col-sm-6
      .form-group
        = ff.label :filename, class: 'sr-only'
        = ff.text_field :filename, class: 'form-control', placeholder: "Filename including extension"
    -#- if gist.g_files.size > 1
    -#  - if gist.persisted?
